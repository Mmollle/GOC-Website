{% extends 'base.j2' %}
{% block content %}
<form action="", method="POST" class= "container"
style = "margin: 10px">
    {{ form.hidden_tag() }}
    <div class = "form-group row"> <legend>Log In!</legend>  </div>

    <div class="form-group">
        <div class = "row"> 
            {{ form.username_or_email.label(class="col-sm-3 col-md-2 col-5 col-form-label") }}
            {{ form.username_or_email(class="form-control col-sm-4 col-7") }}
        </div> 

        <div class = "form-errors"> 
            {% for error in form.username_or_email.errors %}
                <div class = "row"> <span class= "text-danger offset-sm-3 offset-md-2 offset-5"> <small>{{ error }}</small></span> </div>
            {% endfor %}
        </div> 
    </div>


    <div class="form-group">
        <div class = "row"> 
            {{ form.password.label(class="col-sm-3 col-md-2 col-5 col-form-label") }}
            {{ form.password(class="form-control col-sm-4 col-md-4 col-7") }}
        </div>
        <div class = "form-errors"> 
            {% for error in form.password.errors %}
            <div class = "row"> <span class= "text-danger offset-sm-3 offset-md-2 offset-5"> <small>{{ error }}</small></span> </div>
            {% endfor %}
        </div> 
    </div>

    <div class="form-group">
        {{ form.submit(class="btn btn-outline-info") }}
    </div>
</form>
{% endblock content %}
{% extends 'base.j2' %}
{% block content %}
<div> 
    <span> Please make your email public by unchecking the box against Hide Contact Information.
    <a href = "" target="popup" onclick="window.open('https://codeforces.com/settings/general/#needToHideContacts','name','width=800,height=600')">Open Cf Settings</a>
    </span> 
</div> 


<form id = "signup-form" action="", method="POST" class = "container"
style = "margin: 10px">
    {{ form.hidden_tag() }}
    <div class="form-group row"> <legend>Sign Up!</legend> </div> 

    <div class="form-group">
        <div class = "row">
            {{ form.name.label(class="col-sm-3 col-md-2 col-5 col-form-label") }}
            {{ form.name(class="form-control col-sm-4 col-7") }}
        </div>

        <div class = "form-errors"> 
            {% for error in form.name.errors %}
                <div class = "row"> <span class= "text-danger offset-sm-3 offset-md-2 offset-5"> <small>{{ error }}</small></span> </div> 
            {% endfor %}
        </div> 
    </div>


    <div class="form-group">
        <div class = "row"> 
            {{ form.email.label(class="col-sm-3 col-md-2 col-5 col-form-label") }}
            {{ form.email(class="form-control col-sm-4 col-7")}}
        </div> 
    
        <div class = "form-errors"> 
            {% for error in form.email.errors %}
                <div class = "row"> <span class= "text-danger offset-sm-3 offset-md-2 offset-5"> <small>{{ error }}</small></span> </div> 
            {% endfor %}
        </div> 
    </div>


    <div class="form-group">
        <div class= "row">
            {{ form.username.label(class="col-sm-3 col-md-2 col-5 col-form-label") }}
            {{ form.username(class="form-control col-sm-4 col-7")}}
        </div>

        <div class = "form-errors"> 
            {% for error in form.username.errors %}
                <div class = "row"> <span class= "text-danger offset-sm-3 offset-md-2 offset-5"> <small>{{ error }}</small></span> </div> 
            {% endfor %}
        </div> 
    </div>


    <div class="form-group">
        <div class = "row">
            {{ form.password.label(class="col-sm-3 col-md-2 col-5 col-form-label") }}
            {{ form.password(class="form-control col-sm-4 col-7")}}
        </div>

        <div class = "form-errors"> 
            {% for error in form.password.errors %}
                <div class = "row"> <span class= "text-danger offset-sm-3 offset-md-2 offset-5"> <small>{{ error }}</small></span> </div> 
            {% endfor %}
        </div> 
    </div>


    <div class="form-group">
        <div class = "row">
            {{ form.confirm_password.label(class="col-sm-3 col-md-2 col-5 col-form-label") }}
            {{ form.confirm_password(class="form-control col-sm-4 col-7")}}
        </div>

        <div class = "form-errors"> 
            {% for error in form.confirm_password.errors %}
                <div class = "row"> <span class= "text-danger offset-sm-3 offset-md-2 offset-5"> <small>{{ error }}</small></span> </div> 
            {% endfor %}
        </div> 
    </div>


    <div class="form-group">
        {{ form.submit(class="btn btn-outline-info") }}
    </div>
</form>

{% endblock content %}